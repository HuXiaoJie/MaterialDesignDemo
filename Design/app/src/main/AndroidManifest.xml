<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.design"
          xmlns:android="http://schemas.android.com/apk/res/android">

	<application
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">
		<activity android:name=".MainActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>

		<activity
			android:name=".TextInputLayoutActivity"
			android:screenOrientation="portrait"/>
		<activity
			android:name=".SnackbarActivity"
			android:screenOrientation="portrait"/>
		<activity
			android:name=".FloatingActionButtonActivity"
			android:screenOrientation="portrait"/>
		<activity
			android:name=".TabLayoutActivity"
			android:screenOrientation="portrait"/>
		<activity
			android:name=".NavigationViewActivity"
			android:screenOrientation="portrait"/>
		<activity
			android:name=".AppBarLayoutActivity"
			android:screenOrientation="portrait"
			android:theme="@style/MyTheme"/>
		<activity
			android:name=".CoordinatorLayoutActivity"
			android:screenOrientation="portrait"
			android:theme="@style/MyTheme"/>
	</application>

</manifest>